generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  trustScore Int      @default(0)
  createdAt  DateTime @default(now())
  items      Item[]
}

model Item {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  price       Int
  category    String
  department  String
  duration    String
  createdAt   DateTime @default(now())
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
}
